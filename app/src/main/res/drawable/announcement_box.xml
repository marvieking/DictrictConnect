<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background rectangle -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF9800" /> <!-- Change the background color as needed -->
            <corners android:radius="8dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>

    <!-- Border for the rectangle (optional) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"/> <!-- Adjust the border width as needed -->
            android:color="#FF5722" /> <!-- Change the border color as needed -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Content padding (adjust as needed) -->
    <item android:left="8dp" android:right="8dp" android:top="4dp" android:bottom="4dp">
        <!-- Add your text or other content here -->
        <bitmap android:gravity="center"  />
        <!-- You can replace the bitmap with your text or other content -->
    </item>

</layer-list>
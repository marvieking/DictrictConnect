<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentServices"
    android:background="@color/lightgray">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="onBackButtonClick"
        android:src="@drawable/baseline_arrow_back_24" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toplayer">
    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How We May Help You?"
        android:gravity="center"
        android:layout_marginTop="28dp"
        android:textColor="@color/lightgray"
        android:textSize="25dp">
    </TextView>

   <GridLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:columnCount="2"
       android:rowCount="2"
       android:layout_marginTop="200dp"
       android:layout_marginLeft="50dp"
       android:layout_marginRight="50dp"
       android:layout_marginBottom="110dp">

       <androidx.cardview.widget.CardView
           android:id="@+id/composeMsg"
           android:background="@drawable/icon_complaints"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
           android:layout_margin="8dp"
           app:cardCornerRadius="15dp">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/icon_complaints">
               </ImageView>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColor="@color/darkerblue"
                   android:layout_margin="5dp"
                   android:text="Complaints or Concerns"
                   android:textAlignment="center">
               </TextView>
           </LinearLayout>
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/giveFeedback"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
           android:layout_margin="8dp"
           app:cardCornerRadius="15dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="150dp"
                   android:background="@drawable/icon_feedback"></ImageView>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColor="@color/darkerblue"
                   android:layout_marginTop="13dp"
                   android:text="Give Feedback"
                   android:textAlignment="center">
               </TextView>
           </LinearLayout>

       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/requestForm"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
           android:layout_margin="8dp"
           app:cardCornerRadius="15dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/icon_requestforms">
               </ImageView>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColor="@color/darkerblue"
                   android:layout_marginTop="13dp"
                   android:text="Request Forms"
                   android:textAlignment="center">
               </TextView>
           </LinearLayout>
       </androidx.cardview.widget.CardView>


       <androidx.cardview.widget.CardView
           android:id="@+id/makeAppointment"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1"
           android:layout_margin="8dp"
           app:cardCornerRadius="15dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/icon_appointment">
               </ImageView>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColor="@color/darkerblue"
                   android:layout_margin="5dp"
                   android:text="Make an Appointment"
                   android:textAlignment="center">
               </TextView>
           </LinearLayout>
       </androidx.cardview.widget.CardView>
   </GridLayout>
</RelativeLayout>